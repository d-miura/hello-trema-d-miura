# Hello World!
class HelloTrema < Trema::Controller
  def start(_args)
    logger.info "self.class.name: #{self.class.name} started."
    logger.info "self.class: #{self.class} started."
    logger.info "self.name: #{self.name} started."

    puts "p self.class.name: #{self.class.name} started."
    puts "p self.class: #{self.class} started."
    puts "p self.name: #{self.name} started."
  end

  def switch_ready(datapath_id)
    logger.info "Hello #{datapath_id.to_hex}!"
  end

  def switch_disconnected(datapath_id)
    logger.info "Bye #{datapath_id.to_hex}"
  end
end

